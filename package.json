{
  "name": "@theblindhawk/roulette",
  "version": "3.0.0",
  "description": "a thoroughly customizable roulette wheel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.19.4",
    "@types/jest": "^29.2.1",
    "@types/node": "^20.4.7",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitest/coverage-v8": "^1.2.2",
    "babel-jest": "^29.2.2",
    "dprint": "^0.45.0",
    "eslint": "^8.26.0",
    "jest-environment-jsdom": "^29.2.2",
    "jsdom": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.0.3",
    "typescript": "^5.1.6",
    "vite": "^5.0.12",
    "vitest": "^1.2.2"
  },
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "test-coverage": "vitest --coverage",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint src",
    "lint:tsc": "tsc --noEmit",
    "format": "dprint fmt '**/*.{js,ts,tsx,json}'",
    "format-check": "dprint check '**/*.{js,ts,tsx,json}'",
    "build": "tsc && run-s build:*",
    "build:react": "mkdir -p dist/adapters/react && cp src/adapters/react/* dist/react/",
    "build:vuejs": "mkdir -p dist/adapters/vuejs && cp src/adapters/vuejs/* dist/vuejs/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheBlindHawk/Roulette.git"
  },
  "keywords": [
    "roulette",
    "wheel",
    "spin",
    "random",
    "probability",
    "customize"
  ],
  "author": "TheBlindHawk",
  "license": "ISC",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    }
  },
  "bugs": {
    "url": "https://github.com/TheBlindHawk/Roulette/issues"
  },
  "homepage": "https://github.com/TheBlindHawk/Roulette#readme"
}
